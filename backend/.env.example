# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# MongoDB Connection String (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/dockgen-ai?retryWrites=true&w=majority

# Gemini API Key
GEMINI_API_KEY=your-api-key

# Docker Registry Configuration
DOCKER_REGISTRY_URL=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
DOCKER_REGISTRY=docker.io

# Rate Limiting (requests per 15 minutes window)
RATE_LIMIT=100

# Security
JWT_SECRET=your-jwt-secret-key